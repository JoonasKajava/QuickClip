{
  "compilerOptions": {
    "allowJs": true,
    "lib": [
      "DOM",
      "ES2015",
      "ES2016",
      "ES2017",
      "ESNext"
    ],
    "target": "es5",
    "module": "commonjs",
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "jsx": "react",
    "downlevelIteration": true,
    "outDir": "dist",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "paths": {
      "*": [
        "node_modules/*"
      ]
    }
  },
  "files": [
    "./src/global.d.ts"
  ],
  "include": [
    "src/**/*"
  ]
}